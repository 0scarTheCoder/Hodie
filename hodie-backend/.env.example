# Hodie Labs Backend API Configuration

# Server Configuration
PORT=3001
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@your-cluster.mongodb.net/hodie_app?retryWrites=true&w=majority

# AI API Keys (SECURE - Never expose these to frontend)
CLAUDE_API_KEY=your_claude_api_key_here
GROQ_API_KEY=your_groq_api_key_here
KIMI_K2_API_KEY=your_kimi_k2_api_key_here

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
FREE_TIER_RATE_LIMIT=5
BASIC_TIER_RATE_LIMIT=20
PRO_TIER_RATE_LIMIT=100
PREMIUM_TIER_RATE_LIMIT=200

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://hodie-labs-webapp.web.app

# Security
JWT_SECRET=your_jwt_secret_here_change_in_production

# Auth0 Configuration (legacy fallback)
AUTH0_DOMAIN=your_auth0_domain.us.auth0.com
AUTH0_AUDIENCE=https://api.yourdomain.com

# Firebase Admin SDK Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n"
